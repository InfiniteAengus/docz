{
  "name": "@docz/core",
  "version": "2.4.0",
  "description": "It's has never been so easy to documents your things!",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/doczjs/docz.git",
    "directory": "packages/docz"
  },
  "access": "public",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsup --dts",
    "build:watch": "tsup --dts --watch",
    "docz": "ts-node-dev -r tsconfig-paths/register ./bin --project ./tsconfig.json"
  },
  "dependencies": {
    "@mdx-js/loader": "^2.1.3",
    "@next/mdx": "^12.3.0",
    "detect-port": "^1.3.0",
    "dotenv": "^16.0.2",
    "esbuild": "^0.15.7",
    "fs-extra": "^10.1.0",
    "lodash": "^4.17.21",
    "next": "^12.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resolve": "^1.22.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@docz/config": "workspace:*",
    "@docz/load-config": "workspace:*",
    "@types/detect-port": "^1.3.2",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.7.18",
    "@types/resolve": "^1.20.2",
    "@types/yargs": "^17.0.12",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  }
}
