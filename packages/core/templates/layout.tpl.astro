---
import { Main } from "docz/components";
import { Styles, components } from "@docz/theme-basic";

const { page, config } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{page.name} | {config.title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Styles />
  </head>
  <body>
    <Main {...Astro.props} {components} />
  </body>
</html>
